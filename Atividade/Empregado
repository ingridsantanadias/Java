//Essa classe abstrata descreve os empregados 

public abstract class Empregado {
    private String nome;
    
    public Empregado(String nome) {
        this.nome = nome;
    }
    
    public void printPay() {
        System.out.printf("%10s: ganha %8.2f\n", nome, getPay());
    }
    
    public abstract double getPay();
}
